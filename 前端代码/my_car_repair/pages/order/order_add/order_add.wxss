  }
  
  .selnum .cut{
    width: 50rpx;
    height: 100%;
    text-align: center;
    line-height: 50rpx;
  }
  
  .selnum .number{
    flex: 1;
    height: 100%;
    text-align: center;
    line-height: 50rpx;
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
    float: left;
    font-size: 28rpx;
  }
  
  .selnum .add{
    width: 50rpx;
    height: 100%;
    text-align: center;
    line-height: 50rpx;
  }
  