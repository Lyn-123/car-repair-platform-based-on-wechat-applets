.item-box {
    margin-bottom: 20rpx;
  	padding-bottom: 20rpx;
    border-bottom: 1rpx solid #ddd;
    background-color: rgb(255,255,255);
}

.item-img,
.item-img image {
    width: 100%;
    height: 360rpx;
    overflow: hidden;
}

.item-title {
    display: block;
    width: 100%;
    height: 72rpx;
    padding: 12rpx 30rpx 0;
    line-height: 60rpx;
    font-size: 36rpx;
    color: #444;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.item-title-text {
    height: 72rpx;
    line-height: 60rpx;
    font-size: 36rpx;
    color: #444;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.item-content {
    display: -webkit-box;
    width: 100%;
    max-height: 80rpx;
    padding: 0 30rpx;
    margin-bottom: 10rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #666;
    text-overflow: ellipsis;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.item-btm {
    height: 48rpx;
    padding: 10rpx 30rpx;
}

.item-price {
    line-height: 36rpx;
    font-size: 30rpx;
    color: #fb5d5d;
}

.item-welfare {
    float: right;
    width: 150rpx;
    height: 40rpx;
    text-align: center;
    font-size: 24rpx;
    line-height: 40rpx;
    color: #fb5d5d;
    border: 1rpx solid #fb5d5d;
    border-radius: 8rpx;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.m-rating{
  float: right;
  margin-top:5rpx;
}
.m-rating image{
  width: 36rpx;
  height: 36rpx;
  float: left;
  position: relative;
  top: 6rpx;
  margin-right: 8rpx;
}
.rating .count{
  float: left;
  margin-left: 10rpx;
  font-size: 18rpx;
  color: rgba(255, 255, 255, .6);
  text-shadow: 2rpx 4rpx rgba(0, 0, 0, .12);
}